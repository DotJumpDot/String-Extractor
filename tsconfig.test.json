{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out/test",
    "lib": ["ES2020"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["mocha", "node"]
  },
  "include": ["test/**/*"],
  "exclude": ["node_modules", ".vscode-test"]
}
